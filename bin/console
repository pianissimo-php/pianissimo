#!/usr/bin/env php
<?php

require_once __DIR__ . '/../vendor/autoload.php';

use App\Core;
use Symfony\Component\Console\Application;

$core = new Core('dev', true);
$core->boot();

$app = new Application();

$commands = $core->getCommands();

foreach ($commands as $command) {
    $app->add(new $command($core->getContainer()));
}

$app->run();
